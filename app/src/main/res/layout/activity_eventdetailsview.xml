                app:layout_constraintTop_toBottomOf="@+id/imageView47" />

            <ImageView
                android:id="@+id/imageView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="@+id/imageView46"
                app:layout_constraintTop_toBottomOf="@+id/textView78"
                app:srcCompat="@drawable/redclock" />

            <TextView
                android:id="@+id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/sorasemibold"
                android:text="Time"
                android:textColor="@color/mainclr"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView48"
                app:layout_constraintStart_toEndOf="@+id/imageView48"
                app:layout_constraintTop_toTopOf="@+id/imageView48" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sorasemibold"
                android:text="Venue"
                android:textColor="@color/mainclr"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/textView80"
                app:layout_constraintEnd_toEndOf="@+id/textView79"
                app:layout_constraintTop_toTopOf="@+id/textView80" />

            <ImageView
                android:id="@+id/imageView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView81"
                app:layout_constraintEnd_toStartOf="@+id/textView81"
                app:layout_constraintTop_toTopOf="@+id/textView81"
                app:srcCompat="@drawable/redloc" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/soraregular"
                android:text="2:00PM"
                android:textColor="@color/mainclr"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@+id/imageView48"
                app:layout_constraintTop_toBottomOf="@+id/textView80" />

            <TextView
